                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:paddingBottom="20dp"
                android:src="@drawable/lima" />

            <TextView
                android:id="@+id/turbo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Piper Turbo Arrow "
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:paddingBottom="20dp"
                android:src="@drawable/mike" />

            <TextView
                android:id="@+id/twin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Piper Twin Comanche"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:paddingBottom="20dp"
                android:src="@drawable/november" />

            <TextView
                android:id="@+id/batd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Redbird BATD Simulator"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:paddingBottom="35dp"
                android:src="@drawable/oscar" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
