                android:src="@drawable/kilo" />

            <TextView
                android:id="@+id/aatd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PFC AATD Simulator"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
